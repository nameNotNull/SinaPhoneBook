<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.0" >

        <EditText
            android:id="@+id/etTest"
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:textSize="40dip"
            android:background="@null" />
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="top"
        android:layout_marginBottom="66dip"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <!-- 按键1 -->

            <ImageButton
                android:id="@+id/callerimg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_1"
                android:src="@drawable/dial_keyboard_1" />

            <ImageButton
                android:id="@+id/callerimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg1"
                android:background="@drawable/dial_keyboard_button_2"
                android:src="@drawable/dial_keyboard_2" />

            <ImageButton
                android:id="@+id/callerimg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg2"
                android:background="@drawable/dial_keyboard_button_3"
                android:src="@drawable/dial_keyboard_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/callerimg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_4"
                android:src="@drawable/dial_keyboard_4" />

            <ImageButton
                android:id="@+id/callerimg5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg4"
                android:background="@drawable/dial_keyboard_button_5"
                android:src="@drawable/dial_keyboard_5" />

            <ImageButton
                android:id="@+id/callerimg6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg5"
                android:background="@drawable/dial_keyboard_button_6"
                android:src="@drawable/dial_keyboard_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/callerimg7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_7"
                android:src="@drawable/dial_keyboard_7" />

            <ImageButton
                android:id="@+id/callerimg8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callerimg5"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg7"
                android:background="@drawable/dial_keyboard_button_5"
                android:src="@drawable/dial_keyboard_8" />

            <ImageButton
                android:id="@+id/callerimg9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callerimg6"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg8"
                android:background="@drawable/dial_keyboard_button_5"
                android:src="@drawable/dial_keyboard_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/callerimgleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callerimg7"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_star"
                android:src="@drawable/dial_keyboard_asterisk" />

            <ImageButton
                android:id="@+id/callerimg0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callerimg8"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimgleft"
                android:background="@drawable/dial_keyboard_button_0"
                android:src="@drawable/dial_keyboard_0" />

            <ImageButton
                android:id="@+id/callerimgright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callerimg9"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:layout_toRightOf="@+id/callerimg0"
                android:background="@drawable/dial_keyboard_button_pound"
                android:src="@drawable/dial_keyboard_pound" />
        </LinearLayout>
       
    </LinearLayout>      
     <LinearLayout
        	android:layout_gravity="bottom" 
          	android:padding="0.0dip" 
          	android:layout_width="fill_parent" 			
          	android:layout_height="66dip"
           >
               <ImageButton
               
                android:id="@+id/callerimgcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginBottom="10dip"
                
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_pound"
                android:src="@drawable/shortcut_dialer_desktop" />
               <ImageButton
                android:layout_alignParentRight="true" 
                android:id="@+id/callerimgdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dial_keyboard_button_pound"
                android:src="@drawable/icon_dial_delete" />
        </LinearLayout>
      

</LinearLayout>